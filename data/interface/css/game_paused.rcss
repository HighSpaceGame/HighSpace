body
{
	z-index: bottom;
	z-index: -1;
}

#content
{
	position: relative;
}

div#content
{

	top: 45%;
	left: 35%;
	width: 30%;
	height: auto;
	overflow: hidden;
	position: absolute;
	z-index: 3;
}

div#content img
{
	display: block;
	width: 100%;
	height: auto;
}

div#text
{
	text-align: center;
	position: absolute;
	margin-top: 10%;

	width: 100%;
	z-index: 4;
}

p
{
	width: 100%;
}

div#screenrender
{
	position: relative;
	z-index: -2;
}