	background-image: multiplayer-o.png;
}

/*Create Player Button*/

div#player_control_cont
{
	float: left;
	width: 6%;
	height: auto;
	margin-right: 1%;
	margin-left: 5%;
	top: 0;
	margin-bottom: -6%;
	z-index: 1;
}

.createplayer
{
	display: block;
	width: 100%;
	height: auto;

}

#createplayer_img
